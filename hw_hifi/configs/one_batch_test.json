{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 22050
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "TrueHiFiGAN",
    "args": {
      "init_channels": 512,
      "kernel_sizes": [16,16,4,4],
      "strides": [8,8,2,2],
      "res_kernels": [3,7,11],
      "res_dilations": [[1,3,5], [1,3,5], [1,3,5]]
    }
  },
  "data": {
    "train": {
      "batch_size": 20,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "train",
            "data_dir": "/kaggle/input/the-lj-speech-dataset/LJSpeech-1.1",
            "kaggle": "True",
            "segment_length": 20000,
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit": 20
          }
        }
      ]
    },
    "val": {
      "batch_size": 20,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "test",
            "data_dir": "/kaggle/input/the-lj-speech-dataset/LJSpeech-1.1",
            "kaggle": "True",
            "segment_length": 20000,
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "limit": 20
          }
        }
      ]
    }
  },
  "optimizer_g": {
    "type": "AdamW",
    "args": {
      "lr": 2e-4,
      "betas":[0.8, 0.99]
    }
  },
  "optimizer_d": {
    "type": "AdamW",
    "args": {
      "lr": 2e-4,
      "betas":[0.8, 0.99]
    }
  },
  "loss": {
  },
  "metrics": [
  ],
  "lr_scheduler_g": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 0.999
    }
  },
  "lr_scheduler_d": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 0.999
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "hifi_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
